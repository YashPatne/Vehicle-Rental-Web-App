@model Vehicle_Test.Models.ViewModel.RentalViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Rent", "Rentals"))
{

    <div class="form-group">
        @Html.Label("Select Customer")
        @Html.DropDownListFor(m => m.SelectedCustomer, new SelectList(Model.Customers, "Id", "Name"), "Select Customer", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.SelectedCustomer)
    </div>
    <div class="form-group">
        @Html.Label("Select Vehicle")
        @Html.DropDownListFor(m => m.SelectedVehicle, new SelectList(Model.Vehicles, "Id", "Name"), "Select Vehicle", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SelectedVehicle)
    </div>
   
    <button type="submit" class="btn btn-primary"> Rent</button>
}